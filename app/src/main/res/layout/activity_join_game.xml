<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.boolentf.androidclient.JoinGameActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_join_game"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="lol" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Trol"
        android:ems="10"
        android:id="@+id/name_join_game"
        android:layout_above="@+id/password_join_game"
        android:layout_alignLeft="@+id/password_join_game"
        android:layout_alignStart="@+id/password_join_game" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Войти в игру"
        android:id="@+id/status_text_join_game"
        android:layout_above="@+id/name_join_game"
        android:layout_alignLeft="@+id/name_join_game"
        android:layout_alignStart="@+id/name_join_game" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="закрытая"
        android:onClick="onClickJoinGame"
        android:id="@+id/is_open_join_game"
        android:layout_alignTop="@+id/join_button_join_game"
        android:layout_toRightOf="@+id/join_button_join_game"
        android:layout_toEndOf="@+id/join_button_join_game"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="войти"
        android:onClick="onClickJoinGame"
        android:id="@+id/join_button_join_game"
        android:layout_below="@+id/password_join_game"
        android:layout_alignLeft="@+id/password_join_game"
        android:layout_alignStart="@+id/password_join_game" />
</RelativeLayout>
