<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.boolentf.androidclient.JoinGameActivity"
    android:background="@drawable/avtorization_screen1"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/enter_the_game"
        android:id="@+id/status_text_join_game"
        android:layout_above="@+id/name_join_game"
        android:layout_alignLeft="@+id/name_join_game"
        android:layout_alignStart="@+id/name_join_game"
        android:textColor="@color/input_area"
        />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Trol"
        android:hint="@string/name"
        android:background="@color/input_area"
        android:ems="10"
        android:id="@+id/name_join_game"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/password_join_game"
        android:layout_alignLeft="@+id/password_join_game"
        android:layout_alignStart="@+id/password_join_game" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_join_game"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="lol"
        android:layout_marginTop="10dp"
        android:hint="@string/password"
        android:background="@color/input_area"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="закрытая"
        android:onClick="onClickJoinGame"
        android:id="@+id/is_open_join_game"
        android:layout_alignTop="@+id/join_button_join_game"
        android:layout_toRightOf="@+id/join_button_join_game"
        android:layout_toEndOf="@+id/join_button_join_game"
        android:textColor="@color/input_area"
        android:checked="false"
        android:layout_marginTop="10dp"
        />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter"
        android:onClick="onClickJoinGame"
        android:id="@+id/join_button_join_game"
        android:layout_below="@+id/password_join_game"
        android:layout_alignLeft="@+id/password_join_game"
        android:layout_alignStart="@+id/password_join_game"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>
