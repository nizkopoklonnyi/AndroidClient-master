<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.boolentf.androidclient.MainActivity"
    android:background="@drawable/avtorization_screen1"
    >


    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text=""
        android:textColor="@color/input_area"
        android:id="@+id/text"/>

    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Trol"
        android:hint="@string/name"
        android:ems="10"
        android:id="@+id/login_in"
        android:layout_marginTop="115dp"
        android:background="@color/input_area"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@color/input_area"
        android:ems="10"
        android:id="@+id/password_in"
        android:layout_marginTop="25dp"
        android:text="lol"
        android:layout_below="@+id/login_in"
        android:layout_alignLeft="@+id/login_in"
        android:layout_alignStart="@+id/login_in"
        android:hint="@string/password"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/password_in"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp">

        <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="40dp"
             android:text="@string/regestration"
             android:onClick="onClickReginstation"
             android:id="@+id/registration_button_login"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:textSize="12sp" />

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/login"
             android:onClick="onClickLogin"
             android:id="@+id/login_button_login"
             android:textSize="12sp"
             android:layout_below="@+id/password_in"
             android:layout_centerHorizontal="true" />

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/test"
             android:onClick="onClickTest"
             android:id="@+id/graph_test_button"
             android:layout_alignParentRight="true"
             android:layout_alignParentEnd="true" />

    </LinearLayout>


</RelativeLayout>
